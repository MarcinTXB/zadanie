{{ form_start(form) }}
	<table id='admin_akapit_new'>
		<tr>
			<td colspan='2' style="font-weight: bold;">
				Nowy akapit tematu: {{ temat.name }}<br>
        	    Postu: {{ post.tytul }}
        	</td>
        	
        	<td colspan='4'>
        	    {{ form_row(form.tytul) }}
        	</td>
       	</tr>
       	<tr>		
			<td colspan='6'>
	            <div style="float:left;width:120%;margin:0 0 0 -20%;">{{ form_row(form.tresc) }}</div>
	        </td>
	        
	    </tr>	    	
		<tr>
			<td style="width:17%;font-size:0.9em;">Odległość tytułu</td>
			<td>{{ form_row(form.odgt) }}</td>
			<td>{{ form_row(form.odpt) }}</td>
			<td>{{ form_row(form.oddt) }}</td>
			<td>{{ form_row(form.odlt) }}</td>
		</tr>
		<tr>
			<td style="width:17%;font-size:0.9em;">Czcionka tytułu</td>
