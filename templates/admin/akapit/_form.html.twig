			<td style="width:17%;font-size:0.9em;">Odległość akapitu</td>
			<td>{{ form_row(form.odg) }}</td>
			<td>{{ form_row(form.odp) }}</td>
			<td>{{ form_row(form.odd) }}</td>
			<td>{{ form_row(form.odl) }}</td>
		</tr>
		<tr>
			<td style="width:17%;font-size:0.9em;">Czcionka akapitu</td>
			<td>{{ form_row(form.roz) }}</td>
