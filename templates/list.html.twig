	</div>
	
	
    <table class="table" id="list" style="width:59%;">
        <tbody>            
            {% for post in posty %}
            	<tr id="akapit_tytul_tr">
            		
            		<td style="padding:5% 0 1% 3%;font-size:1.7em;font-style:italic;font-weight:bold;color:#FA5;">
            		    {{ post.tytul }}
            		</td>
            	</tr>
