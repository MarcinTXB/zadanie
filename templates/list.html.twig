{% block title %}TematPost{% endblock %}

{% block body %}
	<div style='background:#F00;padding:0.5% 0.7% 0.5% 0.7%;'>
	<div style="background:#007070;padding:0 0 11% 0;border-radius:31vw 5vw 11vw 5vw;">
	
    <div style="color:#FA4;font:bold 2em Arial;top:7%;left:7%;position:fixed;">{{ tematNazwa }}</div>
	<div class='powrot1'>
