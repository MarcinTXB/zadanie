        			</tr>
        			<tr id="akapit_tresc_tr">
        				<td style="	padding-top: {{ akapit.odg }}%;
        							padding-right: {{ akapit.odp }}%;
        							padding-bottom: {{ akapit.odd }}%;
        							padding-left: {{ akapit.odl }}%;
        							font-size: {{ akapit.roz }}em;
        							{% if akapit.italic %}
        								font-style: italic;	
        							{% endif %}
        							{% if akapit.bold %}
        								font-weight: bold;
        							{% endif %}
        							
        							color: #{{ akapit.kolor }};
        							">
        							
        							
        							{% autoescape false %}
